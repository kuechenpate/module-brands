<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Kuechenpate\Brands\Block\Adminhtml\Brand" name="adminhtml.block.promo.quote.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.block.promo.quote.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">kuechenpate_brands_brand_grid</argument>
                        <argument name="dataSource" xsi:type="object">Kuechenpate\Brands\Model\ResourceModel\Brand\Collection</argument>
                        <argument name="default_sort" xsi:type="string">sort_order</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.promo.quote.grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">kuechenpate_brands/*/edit</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="entity_id" xsi:type="string">getEntityId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="entity_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">entity_id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Name</argument>
                                <argument name="index" xsi:type="string">name</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="image">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Image</argument>
                                <argument name="index" xsi:type="string">image</argument>
                                <argument name="renderer" xsi:type="string">Kuechenpate\Brands\Block\Adminhtml\Renderer\Image</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="url_key">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">URL Key</argument>
                                <argument name="index" xsi:type="string">url_key</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="alternative_name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Alternative Name</argument>
                                <argument name="index" xsi:type="string">alternative_name</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="alternative_image">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Alternative Image</argument>
                                <argument name="index" xsi:type="string">alternative_image</argument>
                                <argument name="renderer" xsi:type="string">Kuechenpate\Brands\Block\Adminhtml\Renderer\Image</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="alternative_url_key">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Alternative URL Key</argument>
                                <argument name="index" xsi:type="string">alternative_url_key</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="use_alternative">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">use alternative name</argument>
                                <argument name="index" xsi:type="string">use_alternative</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Kuechenpate\Brands\Model\NameUsage"/>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="position">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Position</argument>
                                <argument name="index" xsi:type="string">position</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
